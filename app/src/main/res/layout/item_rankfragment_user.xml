<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@color/white"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_20"
    android:paddingEnd="@dimen/dp_20"
    android:paddingBottom="@dimen/dp_15"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_user_img"
            tools:background="@color/colorAccent"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40" />
        <TextView
            android:layout_alignTop="@+id/iv_user_img"
            android:id="@+id/tv_user_name"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_toEndOf="@+id/iv_user_img"
            android:textColor="@color/black"
            tools:text="DEXXXMBNC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_user_info"
            android:layout_alignBottom="@+id/iv_user_img"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_toEndOf="@+id/iv_user_img"
            android:textColor="@android:color/darker_gray"
            tools:text="海口市/160cm/长发"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/btn_stroke_bg"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:text="@string/follow"
            android:textSize="@dimen/sp_13"
            android:textColor="@android:color/holo_orange_dark"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_30" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_140"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_pic_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/iv_pic_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp_2"
            android:layout_marginStart="@dimen/dp_2"
            android:layout_weight="1"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/iv_pic_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop" />
    </LinearLayout>
</LinearLayout>