<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:src="@drawable/android"
        android:id="@+id/iv_pic"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_above="@+id/tv_name"
        android:layout_marginBottom="@dimen/dp_10"
        android:id="@+id/logo_icon"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_25"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/dp_20"
        android:src="@drawable/nothing_icon_logo" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_above="@+id/tv_date"
        android:layout_marginStart="@dimen/dp_20"
        android:textSize="@dimen/sp_40"
        tools:text="woooooooya"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/dp_30"
        android:layout_marginStart="@dimen/dp_20"
        android:textSize="@dimen/sp_20"
        tools:text="xxxxxxxxxxxxxxxx"
        android:textColor="@color/translucent_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iv_goto"
        android:src="@drawable/start_up_arrow"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20" />
</RelativeLayout>