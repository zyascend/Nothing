<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_alignParentBottom="true"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/tv_likeCount"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/dp_10"
        android:drawableTop="@drawable/ic_like"
        android:drawablePadding="@dimen/dp_5"
        android:layout_centerVertical="true"
        android:text="210"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_collect"
        android:layout_toStartOf="@+id/tv_likeCount"
        android:layout_margin="@dimen/dp_10"
        android:drawableTop="@drawable/ic_star"
        android:drawablePadding="@dimen/dp_5"
        android:layout_centerVertical="true"
        android:text="收藏"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/ed_comment"
        android:textSize="@dimen/sp_15"
        android:textColorHint="@color/gray"
        android:hint="写下你的评论"
        android:paddingStart="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:background="@drawable/round_bg_gray"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/tv_collect"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40" />
    <ImageView
        android:id="@+id/iv_remind"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_alignEnd="@id/ed_comment"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_at"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20" />
</RelativeLayout>