<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    tools:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/iv_user_img"
        tools:background="@color/colorAccent"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40" />

    <TextView
        android:layout_alignTop="@+id/iv_user_img"
        android:id="@+id/tv_user_name"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_toEndOf="@+id/iv_user_img"
        android:textColor="@color/black"
        tools:text="DEXXXMBNC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_user_info"
        android:layout_alignBottom="@+id/iv_user_img"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_toEndOf="@+id/iv_user_img"
        android:textColor="@android:color/darker_gray"
        tools:text="海口市/160cm/长发"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_marginEnd="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:background="@drawable/btn_stroke_bg"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:text="@string/follow"
        android:textSize="@dimen/sp_13"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_30" />

</RelativeLayout>